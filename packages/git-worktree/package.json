{
  "name": "@openfarm/git-worktree",
  "version": "0.0.1",
  "description": "Git worktree utilities for OpenFarm - manage multiple working trees efficiently",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "bun run build",
    "lint": "bunx biome check .",
    "type-check": "bunx tsc -p tsconfig.json --noEmit",
    "test": "bunx vitest run",
    "clean": "rm -rf dist build .turbo"
  },
  "dependencies": {
    "@openfarm/result": "workspace:*",
    "@openfarm/logger": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.6.0",
    "vitest": "^4.0.17"
  },
  "keywords": [
    "git",
    "worktree",
    "git-worktree",
    "version-control",
    "openfarm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/openfarm/openfarm.git",
    "directory": "packages/git-worktree"
  },
  "bugs": {
    "url": "https://github.com/openfarm/openfarm/issues"
  },
  "homepage": "https://github.com/openfarm/openfarm#readme",
  "publishConfig": {
    "access": "public"
  }
}
