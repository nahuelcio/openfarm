{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@openfarm/core": ["../core/src"],
      "@openfarm/core/*": ["../core/src/*"],
      "@openfarm/types": ["../types/src"],
      "@openfarm/logger": ["../logger/src"],
      "@openfarm/result": ["../result/src"],
      "@openfarm/context": ["../context/src"],
      "@openfarm/git-worktree": ["../git-worktree/src"],
      "@openfarm/agent-runner": ["../agent-runner/src"],
      "@openfarm/workflow-engine": ["../workflow-engine/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
