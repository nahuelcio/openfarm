{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "paths": {
      "@openfarm/core": ["../core/src"],
      "@openfarm/core/*": ["../core/src/*"],
      "@openfarm/types": ["../types/src"],
      "@openfarm/logger": ["../logger/src"],
      "@openfarm/result": ["../result/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../types" },
    { "path": "../logger" },
    { "path": "../result" }
  ]
}
