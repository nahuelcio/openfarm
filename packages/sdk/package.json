{
  "name": "@openfarm/sdk",
  "version": "0.0.1",
  "description": "OpenFarm SDK - AI-powered code editing for your applications",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "openfarm": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "bun run build",
    "lint": "bunx biome check .",
    "type-check": "bunx tsc -p tsconfig.json --noEmit",
    "test": "bunx vitest run --passWithNoTests",
    "clean": "rm -rf dist build .turbo",
    "dev": "bun run src/cli.ts",
    "dev:cli": "bun run src/cli.ts --cli",
    "tui": "bun run src/cli.ts",
    "tui:cli": "bun run src/cli.ts --cli"
  },
  "dependencies": {
    "@opentui/core": "^0.1.75",
    "@opentui/react": "^0.1.75",
    "ai": "^4.0.0",
    "better-sqlite3": "^12.6.2",
    "js-yaml": "^4.1.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^11.0.3",
    "zod": "^4.1.11",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.0",
    "@types/uuid": "^10.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "ai",
    "code-editing",
    "sdk",
    "anthropic",
    "openai",
    "opencode",
    "aider",
    "claude-code"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/openfarm/openfarm.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/openfarm/openfarm/issues"
  },
  "homepage": "https://github.com/openfarm/openfarm#readme",
  "publishConfig": {
    "access": "public"
  }
}
