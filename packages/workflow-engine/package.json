{
  "name": "@openfarm/workflow-engine",
  "version": "0.0.1",
  "description": "OpenFarm Workflow Engine - Framework-agnostic workflow orchestration with event sourcing",
  "license": "MIT",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./errors": "./src/errors/index.ts",
    "./events": "./src/events/index.ts",
    "./orchestrator": "./src/orchestrator/index.ts"
  },
  "scripts": {
    "lint": "bunx biome check .",
    "type-check": "bunx tsc -p tsconfig.json --noEmit",
    "test": "bunx vitest run --passWithNoTests",
    "clean": "rm -rf dist build .turbo"
  },
  "dependencies": {
    "@openfarm/core": "workspace:*",
    "@openfarm/agent-runner": "workspace:*",
    "@openfarm/result": "workspace:*",
