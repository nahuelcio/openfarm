    "@openfarm/types": "workspace:*",
    "@openfarm/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "workflow",
    "orchestration",
    "event-sourcing",
    "state-machine",
    "ai-workflows"
