{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": true,
    "paths": {
      "@openfarm/core": ["../core/src"],
      "@openfarm/core/*": ["../core/src/*"],
      "@openfarm/config": ["../config/src"],
      "@openfarm/result": ["../result/src"],
      "@openfarm/logger": ["../logger/src"],
      "@openfarm/types": ["../types/src"],
      "@openfarm/utils": ["../utils/src"],
      "@openfarm/git-worktree": ["../git-worktree/src"],
      "@openfarm/git-adapter": ["../git-adapter/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
