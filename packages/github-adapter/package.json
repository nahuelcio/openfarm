{
  "name": "@openfarm/github-adapter",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "dependencies": {
    "@openfarm/core": "workspace:*",
    "@openfarm/logger": "workspace:*",
    "@openfarm/result": "workspace:*"
